<% wizard_scope = wizard_path[1..-1].sub('/','.') %>
<!DOCTYPE html>
<html>
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
    <title>Mpdx</title>
    <%= stylesheet_link_tag    "setup", :media => "all" %>
    <%= stylesheet_link_tag    "errors", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="setupwrap">

      <div id="body">
        <header id="global" class="outer">
          <div id="logo"><%= link_to("MPDX", "MPDX") %></div>
          <div class="links">
            <div class="section"><%= current_user %></div>
            <div class="section"><%= link_to(t('g.log_out'), "/logout", :class => "btn btndark") %></div>
          </div>
          
        </header>
        <div id="callout">
          <div class="in">
            <%= t("#{wizard_scope}.title") %> <br/>
            <span class="small"><%= t("#{wizard_scope}.connect") %></span>
          </div>
        </div>
        <div id="content"> 

          <% if notice %>
            <p class="notice"><%= notice %></p>
          <% end %>
          <% if alert %>
            <p class="alert"><%= alert %></p>
          <% end %>   

          <%= yield %>      

        </div>
      </div>

      <aside id="right" style="display: none;">

        <div class="modcontent">
          <%= t("#{wizard_scope}.intro_html") %>
        </div>

      </aside>

    </div>

  </body>
</html>
