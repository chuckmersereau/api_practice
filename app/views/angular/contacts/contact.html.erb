<td class="avatar">
    <img class="avatar" ng-src="{{contact.square_avatar}}">
</td>
<td class="profile">
    <div class="key">
        <h4 class="name"><a href="/contacts/{{contact.id}}">{{contact.name}}</a>
            <i class="fa fa-envelope" ng-class="{'icon-error-red': hasSendNewsletterError()}"
               title="{{contact.send_newsletter | gettext}}" ng-show="contact.send_newsletter"></i>

            <i class="fa fa-<%= current_currency.downcase %>" title="<%= _('Partner - Special') %>"
               ng-show="contact.status === 'Partner - Special'"></i>
            <span title="<%= _('Partner - Financial') %>" ng-show="contact.status === 'Partner - Financial'">
              <i class="fa fa-<%= current_currency.downcase %>"></i>
              <i class="fa fa-<%= current_currency.downcase %>"></i>
            </span>
        </h4>
        <div class="people">
            <div ng-repeat="i in contact.person_ids" ng-show="!getPerson(i).deceased" class="people-single-contact">
              <a href="/people/{{i}}">{{getPerson(i).name}}</a>
              <span ng-show="getPrimaryPhone(getPerson(i).id) && !getPrimaryPhone(getPerson(i).id).historic"
                    class="phone-type phone-type-{{getPrimaryPhone(getPerson(i).id).location}}">
                {{getPrimaryPhone(getPerson(i).id).number}}
              </span>
              <a ng-href="mailto:{{getEmailAddress(e).email}}" ng-repeat="e in getPerson(i).email_address_ids"
                 ng-show="!getEmailAddress(e).historic">
                <i class="fa fa-envelope-square" title="<%= _('Email') %>"></i>
              </a>
              <a ng-href="https://www.facebook.com/{{getFacebookId(fb).remote_id}}" target="_blank"
                 ng-repeat="fb in getPerson(i).facebook_account_ids">
                <i class="fa fa-facebook-square" title="<%= _('Facebook profile') %>"></i>
              </a>
            </div>
        </div>
        <address class="address" ng-repeat="i in contact.address_ids" ng-bind-html="getAddress(i)"></address>
        <div class="tags">
            <a class="tag" ng-repeat-start="tag in contact.tag_list">{{tag}}</a><span style="display:inline;" ng-repeat-end> </span>
        </div>
    </div>
</td>
<td class="contact-tasks" nowrap="nowrap">
    <div ng-show="contact.status !== ''">{{contact.status | gettext}}</div>
    <div ng-show="contact.pledge_amount > 0">
      {{contact.pledge_amount | currency: current_currency_symbol}} {{contact.pledge_frequency | pledgeFrequencyStr}}
      <i ng-show="contact.pledge_received" class="fa fa-check" title="<%= _('Commitment Received') %>"></i>
      <span ng-hide="contact.pledge_received" class="fa-stack pledge_not_received_icon" title="<%= _('Commitment Not Received') %>">
        <i class="fa fa-check fa-stack-1x"></i>
        <i class="fa fa-ban fa-stack-2x"></i>
      </span>
    </div>
    <a href="/tasks?contact_ids={{contact.id}}" ng-show="contact.uncompleted_tasks_count > 0">
      <%= _('Tasks') %>: {{contact.uncompleted_tasks_count}}
    </a>
</td>

<td class="qaction" id="contact_{{contact.id}}_quick">
    <a class="btn btn-sm btn-default"
        href="/contacts/{{contact.id}}/edit"
        data-toggle="tooltip"
        data-placement="top"
        title="<%= _('Edit Contact') %>"><i class="fa fa-pencil"></i></a>
    <a class="btn btn-sm btn-default"
        data-behavior="hide_contact"
        data-method="delete"
        data-remote="true"
        href="/contacts/{{contact.id}}"
        rel="nofollow"
        data-toggle="tooltip"
        data-placement="top"
        title="<%= _('Hide Contact') %>"><i class="fa fa-eye-slash"></i></a>
</td>
<td class="checks"><input type="checkbox" name="contact_ids[]" value="{{contact.id}}" /></td>
