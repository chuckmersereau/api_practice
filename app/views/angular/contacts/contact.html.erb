<td class="avatar">
    <img class="avatar" ng-src="{{contact.square_avatar}}">
</td>
<td class="profile data-font">
    <div class="key">
        <h4 class="name"><a href="/contacts/{{contact.id}}">{{contact.name}}</a>
            <i class="fa fa-envelope" ng-class="{'icon-error-red': hasSendNewsletterError()}" title="{{contact.send_newsletter}}" ng-show="contact.send_newsletter"></i>
            <i class="fa fa-<%= current_currency.downcase %>" title="Partner - Special" ng-show="contact.status === 'Partner - Special'"></i>
            <i class="fa fa-<%= current_currency.downcase %>" title="Partner - Financial" ng-show="contact.status === 'Partner - Financial'"></i>
            <i class="fa fa-<%= current_currency.downcase %>" title="Partner - Financial" ng-show="contact.status === 'Partner - Financial'"></i>
        </h4>
        <div class="people">
            <div ng-repeat="i in contact.person_ids" ng-show="!getPerson(i).deceased" class="people-single-contact">
              <a href="/people/{{i}}">{{getPerson(i).name}}</a>
              <span ng-show="getPrimaryPhone(getPerson(i).id) && !getPrimaryPhone(getPerson(i).id).historic" class="phone-type phone-type-{{getPrimaryPhone(getPerson(i).id).location}}">{{getPrimaryPhone(getPerson(i).id).number}}</span>
              <a ng-href="mailto:{{getEmailAddress(e).email}}" ng-repeat="e in getPerson(i).email_address_ids" ng-show="!getEmailAddress(e).historic"><i class="fa fa-envelope-square" title="Email"></i> </a>
              <a ng-href="https://www.facebook.com/{{getFacebookId(fb).remote_id}}" target="_blank" ng-repeat="fb in getPerson(i).facebook_account_ids"><i class="fa fa-facebook-square" title="Facebook profile"></i> </a>
            </div>
        </div>
        <address class="address" ng-repeat="i in contact.address_ids" ng-bind-html="getAddress(i)"></address>
        <div class="tags">
            <a class="tag" ng-repeat-start="tag in contact.tag_list">{{tag}}</a><span style="display:inline;" ng-repeat-end> </span>
        </div>
    </div>
</td>
<td class="contact-tasks data-font" nowrap="nowrap">
    <span ng-show="contact.status !== ''">{{contact.status}}<br></span>
    <span ng-show="contact.pledge_amount > 0">{{contact.pledge_amount | currency: current_currency_symbol}} {{pledgeFrequencyStr(contact.pledge_frequency)}}<br></span>
    <a href="/tasks?contact_ids={{contact.id}}" ng-show="contact.uncompleted_tasks_count > 0"><%= _('Tasks') %>: {{contact.uncompleted_tasks_count}}</a>
</td>

<td class="qaction" id="contact_{{contact.id}}_quick">
    <a class="btn btn-sm btn-default" href="/contacts/{{contact.id}}/edit"><i class="fa fa-pencil"></i></a>
    <a class="btn btn-sm btn-default" data-behavior="hide_contact" data-method="delete" data-remote="true" href="/contacts/{{contact.id}}" rel="nofollow"><%= _('<i class="fa fa-eye-slash"></i>') %></a>
</td>
<td class="checks"><input type="checkbox" name="contact_ids[]" value="{{contact.id}}" /></td>
