<div class="ui-dialog ui-widget ui-widget-content ui-corner-all ui-front ui-dialog-buttons" style="width: 100%;">
    <div class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix">
        <span id="ui-id-7" class="ui-dialog-title"><%= _('Create New Appeal') %></span>
        <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-icon-only ui-dialog-titlebar-close" title="close" ng-click="cancel()">
            <span class="ui-button-icon-primary ui-icon ui-icon-closethick"></span>
            <span class="ui-button-text"><%= _('close') %></span>
        </button>
    </div>
    <div class="ui-dialog-content ui-widget-content">
        <form>
            <div class="form_wrapper">
                <div class="field">
                    <label><%= _('Name') %></label>
                    <input autofocus="autofocus" type="text" ng-model="appeal.name">
                </div>

                <div class="field" style="display:inline-block;">
                  <label><%= _('Amount needed') %></label>
                  <input type="text" ng-model="amountBeforeGoal" style="width:100px;">
                  <a href="" ng-click="calculateGoal(amountBeforeGoal)">Calculate goal ></a>
                </div>
                <div class="field" style="display:inline-block;">
                  <label><%= _('Goal') %></label>
                  <input type="text" ng-model="appeal.amount" style="width:100px;">
                </div>
              <div style="clear:both; height:10px;"></div>
                <div class="field appealFilterCol">
                    <label><%= _('Add contacts with the following status(es):') %></label>
                    <div style="margin-top: 5px;" ng-repeat="status in contactStatuses">
                        <label><input type="checkbox" ng-model="appeal.validStatus[status]"> {{status}}</label>
                    </div>
                </div>
                <div class="field appealFilterCol">
                  <label><%= _('Add contacts with the following tag(s):') %></label>
                  <div style="margin-top: 5px;" ng-repeat="tag in contactTags">
                    <label><input type="checkbox" ng-model="appeal.validTags[tag]"> {{tag}}</label>
                  </div>
                </div>
              <div class="field appealFilterCol">
                <label><%= _('Do not add contacts who have:') %></label>
                <div style="margin-top: 5px;">
                  <label><input type="checkbox" ng-model="appeal.exclude['specialGift3months']"> Gave a special gift in the last 3 months</label>
                </div>
                <div style="margin-top: 5px;">
                  <label><input type="checkbox" ng-model="appeal.exclude['joinedTeam3months']"> Joined my team in the last 3 months</label>
                </div>
                <div style="margin-top: 5px;">
                  <label><input type="checkbox" ng-model="appeal.exclude['increasedGiving3months']"> Increased their giving in the last 3 months</label>
                </div>
                <div style="margin-top: 5px;">
                  <label><input type="checkbox" ng-model="appeal.exclude['stoppedGiving3months']"> Stopped giving for the last 2 months</label>
                </div>
                <div style="margin-top: 5px;">
                  <label><input type="checkbox" ng-model="appeal.exclude['doNotAskAppeals3months']"> Are marked as do not ask for appeals</label>
                </div>
              </div>
            </div>
            <div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
                <div class="ui-dialog-buttonset">
                    <button type="submit" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" ng-click="save()">
                        <span class="ui-button-text"><%= _('Create') %></span>
                    </button>
                    <button type="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" ng-click="cancel()">
                        <span class="ui-button-text"><%= _('Cancel') %></span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>