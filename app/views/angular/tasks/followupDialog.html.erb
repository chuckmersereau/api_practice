<div id="complete_task_followup_modal" title="Task" style="display:none">
    <div class="form_wrapper">

        <p ng-bind="followUpDialogData.message"></p>

        <div ng-show="followUpDialogData.updateStatus" style="padding-top:10px;">
          <input type="checkbox" ng-model="followUpDialogResult.updateContactStatus"> <%= _('Update contact(s) status to') %> "{{followUpDialogData.updateStatus}}"
        </div>

        <div ng-show="followUpDialogData.financialCommitment" style="padding-top:10px;">
            <div class="form-group">
              <label>
                <%= _('Commitment Frequency') %><br>
                <select ng-model="followUpDialogResult.financialCommitment.frequency">
                    <option value=""></option>
                    <option value="0.23076923076923"><%= _('Weekly') %></option>
                    <option value="0.46153846153846"><%= _('Fortnightly') %></option>
                    <option value="1.0"><%= _('Monthly') %></option>
                    <option value="2.0"><%= _('Bi-Monthly') %></option>
                    <option value="3.0"><%= _('Quarterly') %></option>
                    <option value="4.0"><%= _('Quad-Monthly') %></option>
                    <option value="6.0"><%= _('Semi-Annual') %></option>
                    <option value="12.0"><%= _('Annual') %></option>
                    <option value="24.0"><%= _('Biennial') %></option>
                </select>
              </label>
            </div>

            <div class="form-group">
                <label>
                    <%= _('Commitment Currency') %><br/>
                    <currency-select ng-model="followUpDialogResult.financialCommitment.currency">
                    </currency-select>
                </label>
            </div>
            <div class="form-group">
                <label>
                    <%= _('Commitment Amount') %>
                    <input type="text" class="form-control"
                           ng-model="followUpDialogResult.financialCommitment.amount">
                </label>
            </div>
            <div class="form-group">
                <label>
                    <%= _('Commitment Start Date') %>
                    <input type="text" class="followUpDialogDatepicker form-control"
                           ng-model="followUpDialogResult.financialCommitment.date" class="form-control">
                </label>
            </div>
        </div>

        <div ng-show="followUpDialogData.thankTask" style="padding-top:10px;">
            <input type="checkbox" ng-model="followUpDialogResult.createThankTask"> <%= _('Create "Thank" task') %>
        </div>
        <div ng-show="followUpDialogResult.createThankTask" style="padding-top:10px;">

            <div class="form-group">
                <label><%= _('Subject') %></label>
                <input ng-model="followUpDialogResult.thankTask.subject" class="form-control">
            </div>

            <div class="form-group">
                <label><%= _('Due date') %></label>
                <input type="text" class="followUpDialogDatepicker" ng-model="followUpDialogResult.thankTask.date">
            </div>

            <div class="form-group">
                <label><%= _('Comments') %></label><br>
                <textarea ng-model="followUpDialogResult.thankTask.comments" class="form-control"></textarea>
            </div>
        </div>

        <div ng-show="followUpDialogData.givingTask" style="padding-top:10px;">
            <input type="checkbox" ng-model="followUpDialogResult.createGivingTask"> <%= _('Create "Setup Giving" task') %>
        </div>
        <div ng-show="followUpDialogResult.createGivingTask" style="padding-top:10px;">
            <div class="form-group">
                <label><%= _('Subject') %></label>
                <input ng-model="followUpDialogResult.givingTask.subject" class="form-control">
            </div>

            <%= render 'angular/tasks/due_date_with_time', task_var: 'followUpDialogResult.givingTask' %>

            <div style="padding-top:10px;">
                <label><%= _('Action') %></label>
                <select ng-model="followUpDialogResult.givingTask.type">
                    <option value=""></option>
                    <option value="Email"><%= _('Email') %></option>
                    <option value="Text Message"><%= _('Text Message') %></option>
                    <option value="Facebook Message"><%= _('Facebook Message') %></option>
                    <option value="Talk to In Person"><%= _('Talk to In Person') %></option>
                    <option value="Prayer Request"><%= _('Prayer Request') %></option>
                    <option value="Letter"><%= _('Letter') %></option>
                    <option value="To Do"><%= _('To Do') %></option>
                </select>
            </div>

            <div class="form-group">
                <label><%= _('Comments') %></label>
                <textarea ng-model="followUpDialogResult.givingTask.comments" class="form-control"></textarea>
            </div>
        </div>


        <div ng-show="followUpDialogData.cultivateTask" style="padding-top:10px;">
          <input type="checkbox" ng-model="followUpDialogResult.createCultivateTask">
          <%= _('Create "Cultivate Relationship" task') %>
        </div>
        <div ng-show="followUpDialogResult.createCultivateTask" style="padding-top:10px;">
            <div class="form-group">
                <label><%= _('Subject') %></label>
                <input ng-model="followUpDialogResult.cultivateTask.subject" class="form-control">
            </div>

            <%= render 'angular/tasks/due_date_with_time', task_var: 'followUpDialogResult.cultivateTask' %>

            <div style="padding-top:10px;">
                <label><%= _('Action') %></label>
                <select ng-model="followUpDialogResult.cultivateTask.type">
                    <option value=""></option>
                    <option value="Email"><%= _('Email') %></option>
                    <option value="Text Message"><%= _('Text Message') %></option>
                    <option value="Facebook Message"><%= _('Facebook Message') %></option>
                    <option value="Talk to In Person"><%= _('Talk to In Person') %></option>
                    <option value="Prayer Request"><%= _('Prayer Request') %></option>
                    <option value="Letter"><%= _('Letter') %></option>
                    <option value="To Do"><%= _('To Do') %></option>
                </select>
            </div>

            <div class="form-group">
                <label><%= _('Comments') %></label>
                <textarea ng-model="followUpDialogResult.cultivateTask.comments" class="form-control"></textarea>
            </div>
        </div>


        <div ng-show="followUpDialogData.apptTask" style="padding-top:10px;">
            <input type="checkbox" ng-model="followUpDialogResult.createApptTask"> <%= _('Create "Appointment" task') %>
        </div>
        <div ng-show="followUpDialogResult.createApptTask" style="padding-top:10px;">

            <div class="form-group">
                <label><%= _('Subject') %></label>
                <input ng-model="followUpDialogResult.apptTask.subject" class="form-control">
            </div>

            <%= render 'angular/tasks/due_date_with_time', task_var: 'followUpDialogResult.apptTask' %>

            <div style="padding-top:10px;">
                <label for="follow-up-task_location"><%= _('Location') %></label><br>
                <input type="text" id="follow-up-task_location"
                       placeholder="Defaults to contact's address" size="30"
                       ng-model="followUpDialogResult.apptTask.location">
            </div>

            <div style="padding-top:10px;">
                <label><%= _('Comments') %></label><br>
                <textarea ng-model="followUpDialogResult.apptTask.comments"></textarea>
            </div>
        </div>

        <div ng-show="followUpDialogData.callTask" style="padding-top:10px;">
            <input type="checkbox" ng-model="followUpDialogResult.createCallTask"> Create "{{followUpDialogResult.callTask.type}}" task
        </div>
        <div ng-show="followUpDialogResult.createCallTask" style="padding-top:10px;">
            <label><%= _('Subject') %></label><br>
            <input ng-model="followUpDialogResult.callTask.subject" class="form-control">

            <%= render 'angular/tasks/due_date_with_time', task_var: 'followUpDialogResult.callTask' %>

            <div class="form-group">
                <label><%= _('Tags') %></label>
                <input ng-model="followUpDialogResult.callTask.tags" class="form-control">
            </div>

            <div class="form-group">
                <label><%= _('Comments') %></label>
                <textarea ng-model="followUpDialogResult.callTask.comments" class="form-control"></textarea>
            </div>
        </div>

        <div ng-show="followUpDialogData.newsletter" style="padding-top:10px;">
            <input type="checkbox" ng-model="followUpDialogResult.newsletterSignup"> <%= _('Add contact(s) to newsletter list') %>
        </div>
        <div ng-show="followUpDialogResult.newsletterSignup" style="padding-top:10px;">
            <label><%= _('Newsletter type') %></label>
            <select ng-model="followUpDialogResult.newsletter.type"><option value=""></option>
                <option value="Physical"><%= _('Physical') %></option>
                <option value="Email"><%= _('Email') %></option>
                <option value="Both"><%= _('Both') %></option></select>
        </div>

    </div>




    <div class="ui-dialog-buttonpane ui-widget-content ui-helper-clearfix">
        <div class="ui-dialog-buttonset">
            <button type="button" class="btn btn-primary" role="button" aria-disabled="false" ng-click="followUpSaveFunc()">
                <span class="ui-button-text"><%= _('Save') %></span></button>
            <button type="button" class="btn btn-default" role="button" aria-disabled="false" onClick="jQuery('#complete_task_followup_modal').dialog('close');">
                <span class="ui-button-text"><%= _('Cancel') %></span></button>
        </div>
    </div>
</div>
