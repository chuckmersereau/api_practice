<% if params[:add_task_contact_ids] %>
  $('#add_task_modal').dialog('close')
  $('#add_task_modal .form_wrapper').html('<%= j(render('tasks/bulk_modal_form')) %>')
<% else %>
  $('#edit_task_modal').dialog('close')
  $('#edit_task_modal .form_wrapper').html('<%= j(render('tasks/modal_form')) %>')
<% end %>
if($('#tasks-tab')[0]){
<% if @task.completed %>
  angular.element($('#history-tab'))
<% else %>
  angular.element($('#tasks-tab'))
<% end %>
  // @task needs to be reloaded here to remove empty comments created in app/views/tasks/_bulk_fields.html.erb:59
  .scope().syncTask(<%== TaskSerializer.new(@task.reload).to_json.gsub('/', '\/') %>)
}
