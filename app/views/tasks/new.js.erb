<% if params[:add_task_contact_ids] %>
  $('#add_task_modal .form_wrapper').html('<%= j(render('tasks/bulk_modal_form')) %>')
  $('#add_task_modal').dialog({position:"center"})
<% else %>
  $('#edit_task_modal .form_wrapper').html('<%= j(render('tasks/modal_form')) %>')
  $('#edit_task_modal').dialog({position:"center"})
<% end %>
$('[data-calendar-jquery]').datepicker({
  changeYear:true,
  dateFormat: 'yy-mm-dd',
  autoclose: true,
  todayHighlight: true,
  onSelect: function(response) {
    date = $.datepicker.parseDate('yy-mm-dd', response)
    var year = date.getFullYear();
    var month = date.getMonth() + 1;
    var day = date.getDate();

    $('#task_modal_form [id$=_1i]').val(year);
    $('#task_modal_form [id$=_2i]').val(month);
    $('#task_modal_form [id$=_3i]').val(day);
  }
});
$('#task_modal_form').areYouSure({
  message: '<%= _('It looks like you were adding a task. If you leave before submitting, your changes will be lost.') %>'
})
$.mpdx.autocomplete = new google.maps.places.Autocomplete($('#modal_task_location')[0])
