<%= form_for(@task || current_account_list.tasks.new, remote: true) do |f| %>
  <%= hidden_field_tag 'add_task_contact_ids', params[:add_task_contact_ids] %>
  <%= hidden_field_tag 'bulk_task_update_ids', params[:bulk_task_update_ids] %>
  <%= render 'tasks/bulk_fields', task: f.object, f: f %>
<% end %>
<script>
  $('[data-calendar-jquery]').datepicker({
    changeYear:true,
    dateFormat: 'yy-mm-dd',
    autoclose: true,
    todayHighlight: true,
    onSelect: function(response) {
      date = $.datepicker.parseDate('yy-mm-dd', response)
      var year = date.getFullYear();
      var month = date.getMonth() + 1;
      var day = date.getDate();

      $('.due_date [id$=_1i]').val(year);
      $('.due_date [id$=_2i]').val(month);
      $('.due_date [id$=_3i]').val(day);
    }
  });
</script>
