<div id="contentbody">
  <div class="wpp">
    <h1><%= _('Hi') %> <%= current_user.first_name %>! <span class="smallhead"><%= _("Here's whats happening...") %></span></h1>

    <% if current_account_list.monthly_goal.present? %>
      <% cache(['donations_summary_chart', current_account_list], expires_in: 24.hours) do %>
        <div id="donations_summary_chart">

        </div>
        <%= render 'donations_summary_chart' %>
      <% end %>
    <% else %>
      <%= link_to(preferences_path(:focus => "preference_set_monthly_goal")) do %>
        <div class="mwrap">
          <div class="nohide floating info">
            <%= _('Click here to set your monthly goal, after which we will show you a pretty graph of your donations') %>
          </div>
        </div>
      <% end %>
    <% end %>


    <section id="dash-widgets">
      <div class="row">
        <div class="col-md-4">
          <div class="panel panel-default dash-panel panel-tasks">
            <div class="panel-heading">
              Tasks <span class="badge data-font">45</span>
            </div>
            <div class="panel-body">
              
              <div class="dash-tasks">
                <ul class="plain-list">
                  <li><a href=""><span class="count">10</span> Overdue</a></li>
                  <li><a href=""><span class="count">10</span> Overdue</a></li>
                  <li><a href=""><span class="count">10</span> Overdue</a></li>
                </ul>
              </div>

              <a href="" class="see-all"><i class="fa fa-plus-square-o"></i> See all 50 Tasks</a>

              <a href="" class="btn btn-blue btn-lg btn-add-tasks"><i class="fa fa-plus-circle"></i> Add a New Task</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default dash-panel">
            <div class="panel-heading">
              Cultivate
            </div>
            <div class="panel-body">
              <div class="dash-stat"><span class="count-big">45</span> days since your last prayer letter</div>

              <h4 class="title">Recent Birthdays</h4>
              <ul class="plain-list">
                <li>Al Fong: Thu, Jan 1</li>
                <li>The Flash: Thu, Jan 1</li>
                <li>Chris Kringle: Thu, Jan 1</li>
                <li>Lois Lane: Thu, Jan 1</li>
                <li>Clark Kent: Thu, Jan 1</li>
              </ul>
              <a href="" class="see-all"><i class="fa fa-plus-square-o"></i> See all 50 Birthdays</a>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="panel panel-default dash-panel">
            <div class="panel-heading">
              Appeals
            </div>
            <div class="panel-body">
              <div class="appeal-single">
                <div class="dash-stat">
                  <span class="count-big count-yellow">$500.00</span>/$5000.00
                </div>
                <div class="dash-progress">
                  <div class="progress-bar progress-yellow" style="width: 20%;"></div>
                  <span class="progress-count">20%</span>
                </div>
                East Asia Summer Project
              </div>
              <div class="appeal-single">
                <div class="dash-stat">
                  <span class="count-big count-red">$500.00</span>/$5000.00
                </div>
                <div class="dash-progress">
                  <div class="progress-bar progress-red" style="width: 20%;"></div>
                  <span class="progress-count progress-count-inside">20%</span>
                </div>
                East Asia Summer Project
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="dash-progress">
      <div class="page-filters">
        <div class="row">
          <div class="col-md-6">
            <h3>Progress <span class="normal-weight">June 5 - July 5</span></h3>
          </div>
          <div class="col-md-6 text-right">
            <a href="" class="btn btn-blue">Weekly Progress Report</a>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <div class="well">
            <div class="progress-box-title"><i class="fa fa-mobile"></i> Phone Dials</div>
            <div class="progress-stat"><span class="count-big">0</span> Outgoing</div> 
            <div class="progress-stat"><span class="count-big">5</span> Talked To</div> 
            <div class="progress-stat"><span class="count-big">2</span> Appointments Produced</div> 
            <ul class="plain-list">
              <li>Completed: 0</li>
              <li>Attempted: 0</li>
              <li>Received: 0</li>
            </ul>
          </div>
          <div class="well">
            <div class="progress-box-title"><i class="fa fa-desktop"></i> Electronic Contacts</div>
            <div class="progress-stat"><span class="count-big">0</span> Sent</div> 
            <div class="progress-stat"><span class="count-big">5</span> Received</div> 
            <div class="progress-stat"><span class="count-big">2</span> Appointments Produced</div> 
            <ul class="plain-list">
              <li>Email: 0 Sent / 0 Received</li>
              <li>Facebook: 0 Sent / 0 Received</li>
              <li>Text SMS: 0 Sent / 0 Received</li>
            </ul>
          </div>
          <div class="well">
            <div class="progress-box-title"><i class="fa fa-envelope-o"></i> Correspondence</div>
            <div class="progress-stat"><span class="count-big">10</span> Pre-call Letters</div> 
            <div class="progress-stat"><span class="count-big">5</span> Support Letters</div> 
            <div class="progress-stat"><span class="count-big">2</span> Thank You Notes</div> 
            <div class="progress-stat"><span class="count-big">2</span> Reminders</div> 
          </div>
        </div>
        <div class="col-md-4">
          <div class="well">
            <div class="progress-box-title"><i class="fa fa-users"></i> Contacts</div>
            <div class="progress-stat"><span class="count-big">0</span> Active</div> 
            <div class="progress-stat"><span class="count-big">5</span> Gained Referrals</div> 
            
          </div>
          <div class="well">
            <div class="progress-box-title"><i class="fa fa-calendar"></i> Appointments</div>
            <div class="progress-stat"><span class="count-big">0</span> Completed</div> 
            
          </div>
        </div>
    </section>


    <div id="dash-tabs" class="tabgroup">
      <ul>
        <li class="killround"><a href="#dash-connect" onClick="_gaq.push(['_trackEvent', 'Dashboard Tabs', 'Click', '<%= _('Connect') %>']);"><%= _('Connect') %></a></li>
        <li class="killround"><a href="#dash-care" onClick="_gaq.push(['_trackEvent', 'Dashboard Tabs', 'Click', '<%= _('Care') %>']);"><%= _('Care') %></a></li>
        <li class="killround"><a href="#dash-cultivate" onClick="_gaq.push(['_trackEvent', 'Dashboard Tabs', 'Click', '<%= _('Cultivate') %>']);"><%= _('Cultivate') %></a></li>
        <li class="killround"><a href="#dash-progress" onClick="_gaq.push(['_trackEvent', 'Dashboard Tabs', 'Click', '<%= _('Progress') %>']);"><%= _('Progress') %></a></li>
        <li class="killround"><a href="#dash-appeals" onClick="_gaq.push(['_trackEvent', 'Dashboard Tabs', 'Click', '<%= _('Appeals') %>']);"><%= _('Appeals') %></a></li>
      </ul>

      <div id="dash-connect" ng-controller="taskShortListController" ng-init="init('top5','')">
        <table class="list tasklist">
          <tr task="task" ng-repeat="task in tasks" id="task_{{task.id}}"></tr>
        </table>
        <div class="seemore">
          <%= link_to(_('See All'), tasks_path, class: 'btn btn-primary btn-sm') %>
        </div>
      </div>
      <div id="dash-care"></div>
      <div id="dash-cultivate"></div>
      <div id="dash-progress"></div>
      <div id="dash-appeals"><p><appeals-list></appeals-list></div>

    </div>

  </div>
</div>
<task-followup-dialog id="task-followup-dialog"></task-followup-dialog>
<%= render 'tasks/results_modal' %>