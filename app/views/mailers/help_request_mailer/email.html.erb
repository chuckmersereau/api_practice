<h2><%= @help_request.request_type %></h2>

<table border="1" cellspacing="0" cellpadding="5">
  <tr>
    <th><%= _('Name:') %></th>
    <td><%= @help_request.name %></td>
  </tr>
  <tr>
    <th><%= _('Email:') %></th>
    <td><%= @help_request.email %></td>
  </tr>
  <tr>
    <th><%= @help_request.request_type.titleize %>:</th>
    <td><%= @help_request.problem %></td>
  </tr>

  <% if @help_request.file? %>
    <tr>
      <th><%= _('Import File:') %></th>
      <td><%= link_to(_('Click here to download the file'), @attachment_url) %></td>
    </tr>
  <% end %>
</table>

<br /><br />

<h2><%= _('User Info') %></h2>
<table border="1" cellspacing="0" cellpadding="5">
  <tr>
    <th><%= _('Browser:') %></th>
    <td><%= @help_request.browser %></td>
  </tr>

  <tr>
    <th><%= _('User Agent:') %></th>
    <td><%= @help_request.user_agent %></td>
  </tr>

  <tr>
    <th><%= _('User ID:') %></th>
    <td><%= @help_request.user_id %></td>
  </tr>

  <tr>
    <th><%= _('Account List ID:') %></th>
    <td><%= @help_request.account_list_id %></td>
  </tr>

  <tr>
    <th><%= _('User Preferences:') %></th>
    <td><%= @help_request.user_preferences %></td>
  </tr>

  <tr>
    <th><%= _('Account List Settings:') %></th>
    <td><%= @help_request.account_list_settings %></td>
  </tr>
</table>
