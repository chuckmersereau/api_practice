<% exhibit(contact, self).tap do |contact_exhibit| %>
  <tr id="<%= dom_id(contact) %>" data-hook="contact">
    
    <td class="profile">
      <div class="avatar">
        <%= link_to(image_tag(contact_exhibit.avatar, class: "avatar small"), contact_path(contact))%>
      </div>
      <div class="key">
        <span class="name"><%= link_to(contact_exhibit, contact_path(contact), data: {name: contact_exhibit.to_s}) %></span>
        <div class="people">
          <%== contact.people.collect do |person|
            link_to(exhibit(person, self), person_path(person))
          end.join(', ') %>
        </div>
        <div class="tags">
          <% contact.tags.each do |tag| %>
            <%= link_to(tag, params.except(:action, :controller).merge(tags: tag.name), class: "tag")%>
          <% end %>
        </div>
      </div>
    </td>
    <td class="qaction" id="<%= dom_id(contact) %>_quick">
      <a href="" class="btn smallbtn quick"><%= t('g.quick') %></a>
      <ul style="display:none" class="quick_action_list">
        <li><%= link_to(t('g.show'), contact_path(contact), :class => "none") %></li>
        <li><%= link_to(t('g.edit'), edit_contact_path(contact), :class => "none") %></li>
      </ul>
    </td>
    <%#<td class="checks"><input type="checkbox" /></td>%>
  </tr>
<% end %>
