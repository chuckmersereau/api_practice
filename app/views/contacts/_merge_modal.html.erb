<div id="merge_modal" title="<%= _('Merge Contacts') %>" style="display:none">
  <div class="form_wrapper">
    <%= form_tag merge_contacts_path do |f| %>
      <%= hidden_field_tag :merge_contact_ids %>
    <% end %>
    <%= _('Are you sure you want to merge the selected contacts?') %>
    <div class="warning-text"><%= _('This action cannot be undone!') %></div>
    <br/>
    <%= _('These contacts would be merged:') %>
    <div id="merge_contact_names"></div>
  </div>
</div>
