<div class="field phone_field form-inline" data-behavior="field-wrapper">
  <div class="form-group">
    <div class="input-group">
      <%= builder.phone_field :number, class: 'form-control', size: 33 %>
      <div class="input-group-addon"><%= builder.check_box :primary, class: 'primary' %></div>
    </div>
  </div>
  <div class="form-group">
  <i class="fa fa-question-circle" data-toggle="tooltip"
     data-placement="top" data-behavior="explain_statuses"
     title="<%= _('You can add an extension in the following ways: ' +
                          '123456789#123, 123456789#ext=123, 123456789;123, 123456789;ext=123') %>"></i>
  </div>
  <div class="form-group">
    <%= builder.select :location, PhoneNumber::LOCATIONS.collect { |s| [_(s), s.downcase] }, {include_blank: true}, class: 'form-control' %>
  </div>
  <div class="form-group disabler">
    <%= builder.check_box :historic, class: 'phone_historic' %>
    <%= builder.label :historic, _(' ') %>
  </div>
  <%= link_to_remove_fields(builder) %>
</div>
