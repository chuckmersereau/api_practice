<div class="set phone">
  <% if person.phone_numbers.present? %>
    <% person.phone_numbers.map {|pn| exhibit(pn, self)}.each do |phone_number| %>
      <%= phone_number %>
      <% if person.phone_numbers.length > 1 && phone_number.primary? %>
        <i class="fa fa-check green"></i>
      <% end %>
      <br/>
    <% end %>
  <% else %>
    <%= link_to(_('Add a phone number'), @contact ? edit_contact_path(@contact) : edit_person_path(person)) %>
  <% end %>
</div>

<div class="set email">
  <% if person.email_addresses.present? %>
    <% person.email_addresses.each do |email| next if email.historic? %>
      <%= exhibit(email, self) %>

      <% if person.email_addresses.length > 1 && email.primary? %>
        <i class="fa fa-check green"></i>
      <% end %>
      <br/>
    <% end %>
  <% else %>
    <%= link_to(_('Add an email address'), @contact ? edit_contact_path(@contact) : edit_person_path(person)) %>
  <% end %>
</div>

<% if person.birthday_month.present? %>
    <div class="set">
      <strong>Birthday:</strong> <%= I18n.t("date.month_names")[person.birthday_month] %> <%= person.birthday_day %>, <%= person.birthday_year %>
    </div>
<% end %>

<% if person.anniversary_month.present? %>
    <div class="set">
      <strong>Anniversary:</strong> <%= I18n.t("date.month_names")[person.anniversary_month] %> <%= person.anniversary_day %>, <%= person.anniversary_year %>
    </div>
<% end %>

<% if person.occupation.present? %>
    <div class="set">
      <strong>Occupation:</strong> <%= person.occupation %>
    </div>
<% end %>

<% if person.employer.present? %>
    <div class="set">
      <strong>Employer:</strong> <%= person.employer %>
    </div>
<% end %>


