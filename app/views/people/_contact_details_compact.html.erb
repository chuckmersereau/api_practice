<div class="set phone">
  <% if person.phone_numbers.present? %>
    <% person.phone_numbers.map {|pn| exhibit(pn, self)}.each do |phone| next if phone.historic? %>
      <%= phone %>
      <% if person.phone_numbers.length > 1 && phone.primary? %>
        <i class="fa fa-check green"></i>
      <% end %>
      <br/>
    <% end %>
  <% else %>
    <span class="best_in_place best_in_place_once" data-bip-attribute="number"
          data-bip-object="person[phone_numbers_attributes][0]"
          data-bip-type="input" data-bip-url="/people/<%= person.id %>"
          id="best_in_place_person_<%= person.id %>_phone_number"><%= _('Add a phone number') %></span>
  <% end %>
</div>

<div class="set email">
  <% if person.email_addresses.present? %>
    <% person.email_addresses.each do |email| next if email.historic? %>
      <%= exhibit(email, self) %>

      <% if person.email_addresses.length > 1 && email.primary? %>
        <i class="fa fa-check green"></i>
      <% end %>
      <br/>
    <% end %>
  <% else %>
    <span class="best_in_place best_in_place_once" data-bip-attribute="email"
          data-bip-object="person[email_addresses_attributes][0]"
          data-bip-type="input" data-bip-url="/people/<%= person.id %>"
          id="best_in_place_person_<%= person.id %>_email_address"><%= _('Add an email address') %></span>
  <% end %>
</div>

<% if person.birthday_month.present? %>
    <div class="set">
      <strong><%= _('Birthday') %>:</strong> <%= I18n.t("date.month_names")[person.birthday_month] %> <%= person.birthday_day %>, <%= person.birthday_year %>
    </div>
<% end %>

<% if person.anniversary_month.present? %>
    <div class="set">
      <strong><%= _('Anniversary') %>:</strong> <%= I18n.t("date.month_names")[person.anniversary_month] %> <%= person.anniversary_day %>, <%= person.anniversary_year %>
    </div>
<% end %>

<% if person.occupation.present? %>
    <div class="set">
      <strong><%= _('Occupation') %>:</strong> <%= person.occupation %>
    </div>
<% end %>

<% if person.employer.present? %>
    <div class="set">
      <strong><%= _('Employer') %>:</strong> <%= person.employer %>
    </div>
<% end %>


