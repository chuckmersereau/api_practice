<% exhibit(person, self).tap do |p| %>
    <div class="col-md-6">
      <div class="small-person well clearfix" id="person-<%= p.id %>">

        <div class="person-external">
          <img src="<%=p.avatar(:large_square)%>">
        </div>
        <div class="social-icons">
          <% if p.facebook_account %>
              <%= link_to('f', p.facebook_account.url, target: '_blank', class: 'facebook') %>
          <% end %>
          <% if p.twitter_account %>
              <%= link_to('t', p.twitter_account.url, target: '_blank', class: 'twitter') %>
          <% end %>
          <% if p.linkedin_account %>
              <%= link_to('l', p.linkedin_account.url, target: '_blank', class: 'linkedin') %>
          <% end %>
          <% if p.website %>
              <%= link_to('w', p.website.url, target: '_blank', class: 'website') %>
          <% end %>
        </div>

        <div class="person-details">
          <div class="name"><%= link_to(p, p) %></div>
          <div class="person-details-small">
            <%= render 'people/contact_details_compact', person: p %>
          </div>
        </div>
      </div>
    </div>
<% end %>
