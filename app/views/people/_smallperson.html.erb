<% exhibit(person, self).tap do |p| %>
  <div class="col-md-6">
  <div class="small-person well clearfix" id="person-<%= p.id %>">

    <div class="person-external">
      <% if !p.facebook_account %>
        <i class="fa fa-plus-circle fa-3x avatar-add" replace-avatar ng-click="replaceFacebookLink(<%=p.contact.id%>, <%=p.id%>, '<% if p.facebook_account %><%=p.facebook_account.url%><% end %>')"></i>
      <% end %>
      <img src="<%=p.avatar(:large_square)%>">
    </div>
    <div class="social-icons">
      <% if p.facebook_account %>
        <%= link_to('f', p.facebook_account.url, {class: "facebook"}) %>
      <% end %>
      <% if p.twitter_account %>
        <%= link_to('f', p.twitter_account.url, {class: "twitter"}) %>
      <% end %>
      <% if p.linkedin_account %>
        <%= link_to('f', p.linkedin_account.url, {class: "linkedin"}) %>
      <% end %>
      <% if p.website %>
        <%= link_to('f', p.website.url, {target: "_blank", class: "website"}) %>
      <% end %>
    </div>

    <div class="person_details">
      <div class="name"><%= link_to(p, p) %></div>
      <%= render 'people/contact_details_compact', person: p %>
    </div>
  </div>
  </div>
<% end %>
