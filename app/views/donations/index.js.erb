$('.spinner').hide();
<% if params[:page] %>
  $('#donations_table').append('<%= j(render('donations', donations: @donations)) %>');
<% else %>
  $('#donations').html('<%= j(render('chart', donations: @donations)) %>');
  $('#donations').append('<%= j(render('donations', donations: @donations)) %>');
<% end %>
<% if @donations.next_page %>
  $('#donations').append('<%= j(will_paginate @donations, remote: true, page_links: false, previous_label: '', next_label: 'More') %>')
<% end %>
