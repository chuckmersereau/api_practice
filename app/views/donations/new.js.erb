$('.form_wrapper').html('<%= j(render('form', donation: @donation)) %>')
$('#js-edit_donation').dialog({
  title: __('New Donation'),
  width: 'auto',
  buttons: [
    {
      text: __('Save'),
      'class':'btn btn-primary',
      click: function(e) {
        $('form', this).trigger('submit')
      }
    }, {
      text: __('Cancel'),
      'class':'btn btn-secondary',
      click: function() {
        $(this).dialog("destroy");
      }
    }
  ]
});
