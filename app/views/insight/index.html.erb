<div class="clr"></div>
<h2>Partner Recommendations for <%= @current_user%></h2>

<div class="clr"></div>
<table class="tablelist" >
  <thead>
  <tr>
    <th >Gift Range</th>
    <th>Donor Account Number</th>
    <th>Zip Code</th>
    <th>HH Income Range by Zip</th>
    <th>Current Gift Amount</th>
    <th>Average HH Income by Zip<sub>+</sub></th>
    <th>Last Increase</th>
    <th>Next Suggested Ask</th>
    <th>Suggested Ask Amount</th>
    <th>Max Ask Amount</th>
  </tr>
  </thead>
  <tbody>
  <% @xsd_results.each  do |c| %>
      <tr>
        <td width='Auto'><%= c[:Column6] %></td>
        <td><%= c[:Column10] %></td>
        <td><%= c[:Column14] %></td>
        <td><%= c[:Column7] %></td>
        <td style="text-align:right">$<%= c[:Column1] %></td>
        <td style="text-align:right">$<%= c[:Column2] %></td>
        <td><%= c[:Column12] %></td>
        <td><%= c[:Column12] %></td>
        <td style="text-align:right">$<%= c[:Column13] %></td>
        <td style="text-align:right">$<%= c[:Column8] %></td>
      </tr>

  <% end %>
      </tbody>
    </table>

<p>
